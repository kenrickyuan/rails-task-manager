<h1><%= @task.title %></h1>
<h4><%= @task.details %></h4>
<%= link_to "Edit this task", task_edit_path(@task)%>
<div>
  <input type="checkbox" name="completed" <%= "checked" if @task.completed %>>
  <label for="completed">This task is <%= @task_phrase %></label>
</div>

<%= link_to "Delete", task_path(@task),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this task?" } %>

<%= link_to "Back to tasks", tasks_path%>


